<Window x:Class="Color_it_Subgame_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Color_it_Subgame_Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Name="Lines" Content="Lines" Grid.Row="0" Grid.Column="0" Click="Button_Lines_Click"/>
        <Button Name="MatchThree" Content="Match-Three" Grid.Row="1" Grid.Column="0" Click="Button_Match_Three_Click"/>
        <Button Name="Snake" Content="Snake" Grid.Row="2" Grid.Column="0" Click="Button_Snake_Click"/>
    </Grid>
</Window>
